<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_location_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/cardviewImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@color/colorNoir"
                android:src="@drawable/image1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/cardviewClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/cercle_backgroud"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="center"
                    android:text="X"
                    android:textColor="@color/colorBlanc"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardviewTitre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LE PLUS GRAND CABARET DU MONDE"
                    android:textColor="@color/colorBlanc"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardviewType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Chanson"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlanc" />

                <TextView
                    android:id="@+id/cardviewAdresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Zenith, 1 Boulevard des CitÃ©s Unies, 59777 Lille"
                    android:textColor="@color/colorBlanc" />

                <TextView
                    android:id="@+id/cardviewPrix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="39.99 euros"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanc" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/cardviewBtnDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/rectangle_background"
                android:text="DETAIL"
                android:textColor="@color/colorBlanc"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/cardviewBtnItineraire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/rectangle_background"
                android:text="ITINERAIRE"
                android:textColor="@color/colorBlanc"
                android:layout_marginStart="8dp"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>